<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >


    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical"
            android:background="@color/white"
            >

            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/carrot_img_profile"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/profile_round_person"
                        android:layout_weight="1"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="8"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="5dp">
                        <TextView
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="16dp"
                            android:textColor="#111"
                            android:textStyle="bold"
                            android:text="프로필"/>
                        <TextView
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="치평동 #25983728"/>
                    </LinearLayout>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_baseline_arrow_forward_ios_24"/>
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:background="@drawable/carrot_button"
                >

                <ImageView
                    android:id="@+id/carrot_profile"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:paddingLeft="5dp"
                    android:src="@drawable/login_logo" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/carrot_pay"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/carrot_profile"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:textColor="@color/carrot"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:text="pay"
                        />
                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:textStyle="bold"
                        android:gravity="left"
                        android:textSize="18dp"
                        android:text=" 0원"
                        android:textColor="#111"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="10dp"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerVertical="true"
                    >



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="계좌송금"/>
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text=" ┃ "/>
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="충전"/>
                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    >

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/carrot_sell_launcher_round"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="#111"
                        android:text="판매내역"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    >

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/carrot_buy_launcher_round"/>
                    <TextView
                        android:textColor="#111"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="구매내역"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    >

                    <ImageView
                        android:id="@+id/carrot_favor"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/carrot_love_launcher_round"/>
                    <TextView
                        android:textColor="#111"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="관심목록"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view2"
        style="@style/carrotfragment_card">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical"
            android:background="@color/white">
            <TextView
                android:text="나의 활동"
                style="@style/carrotfragment_bold"
                />
            <LinearLayout
                style="@style/mwh"
                android:layout_marginBottom="10dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_location_on_fill0_wght400_grad0_opsz48"/>
                <TextView
                    style="@style/carrotfragment_txt"
                    android:text="내 동네 설정" />
            </LinearLayout>

            <LinearLayout
                style="@style/mwh"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_flare_fill0_wght400_grad0_opsz48"/>
                <TextView
                    style="@style/carrotfragment_txt"
                    android:text="동네 인증하기" />
            </LinearLayout>

            <LinearLayout
                style="@style/mwh"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_sell_fill0_wght400_grad0_opsz48"/>
                <TextView
                    style="@style/carrotfragment_txt"
                    android:text="키워드 알림" />
            </LinearLayout>

            <LinearLayout
                style="@style/mwh"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_grid_view_fill0_wght400_grad0_opsz48"/>
                <TextView
                    style="@style/carrotfragment_txt"
                    android:text="모아보기" />
            </LinearLayout>

            <LinearLayout
                style="@style/mwh"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_book_fill0_wght400_grad0_opsz48"/>
                <TextView
                    style="@style/carrotfragment_txt"
                    android:text="당근가계부" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view3"
        style="@style/carrotfragment_card"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical"
            android:background="@color/white">

            <TextView
                style="@style/carrotfragment_bold"
                android:text="우리 동네"
                 />

            <LinearLayout
                style="@style/mwh"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_feed_fill0_wght400_grad0_opsz48"/>
                <TextView
                    style="@style/carrotfragment_txt"
                    android:text="동네생활 글/댓글" />
            </LinearLayout>

            <LinearLayout
                style="@style/mwh"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_assignment_fill0_wght400_grad0_opsz48"/>
                <TextView
                    style="@style/carrotfragment_txt"
                    android:text="동네홍보 글" />
            </LinearLayout>

            <LinearLayout
                style="@style/mwh"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_chat_fill0_wght400_grad0_opsz48"/>
                <TextView
                    style="@style/carrotfragment_txt"
                    android:text="동네 가게 후기" />
            </LinearLayout>

            <LinearLayout
                style="@style/mwh"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_checklist_fill0_wght400_grad0_opsz48"/>
                <TextView
                    style="@style/carrotfragment_txt"
                    android:text="저장한 장소" />
            </LinearLayout>

            <LinearLayout
                style="@style/mwh"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_in_home_mode_fill0_wght400_grad0_opsz48"/>
                <TextView
                    style="@style/carrotfragment_txt"
                    android:text="내 단골 가게" />
            </LinearLayout>

            <LinearLayout
                style="@style/mwh"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_confirmation_number_fill0_wght400_grad0_opsz48"/>
                <TextView
                    style="@style/carrotfragment_txt"
                    android:text="받은 쿠폰함" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view4"
        style="@style/carrotfragment_card"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical"
            android:background="@color/white">

            <TextView
                style="@style/carrotfragment_bold"
                android:text="사장님 메뉴"
                 />

            <LinearLayout
                style="@style/mwh"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_cottage_fill0_wght400_grad0_opsz48"/>
                <TextView
                    style="@style/carrotfragment_txt"
                    android:text="비즈프로필 만들기" />
            </LinearLayout>

            <LinearLayout
                style="@style/mwh"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_campaign_fill0_wght400_grad0_opsz48"/>
                <TextView
                    style="@style/carrotfragment_txt"
                    android:text="광고" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view5"
        style="@style/carrotfragment_card"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical"
            android:background="@color/white">

            <TextView
                style="@style/carrotfragment_bold"
                android:text="기타"
                 />

            <LinearLayout
                style="@style/mwh"
                android:layout_marginBottom="10dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_mail_fill0_wght400_grad0_opsz48"/>
                <TextView
                    style="@style/carrotfragment_txt"
                    android:text="친구초대" />
            </LinearLayout>
            <LinearLayout
                style="@style/mwh"
                android:layout_marginBottom="10dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_support_agent_fill0_wght400_grad0_opsz48"/>
                <TextView
                    style="@style/carrotfragment_txt"
                    android:text="자주 묻는 질문" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>