<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- style == css 미리 어떤 크기나 색상 등을 만들어놓고 사용하는 기법.
        ex)web(a태그 모양을 버튼처럼 만들어놓고 클래스 로딩을 이용해서 재활용)
     -->
    <dimen name="jej_tv_width">100dp</dimen>
    <dimen name="jej_tv_height">80dp</dimen>

    <color name="jej_tv_color">#486B8E</color>

    <!-- 위젯에 한번에 적용가능한 style 태그 이용해보기. 넓이 높이 색상 등등을 미리 하나의 name으로 묶어서
        사용하는 기법.
     -->
    <style name="jej_tv_style">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:background">#123456</item>
        <item name="android:textSize">30dp</item>
    </style>
    <!-- 상속받은 후 재정의 가능. -->
    <style name="jej_tv_style2" parent="jej_tv_style">
        <item name="android:textSize">20dp</item>
    </style>

    <style name="jej_tv_style3">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">5dp</item>
    </style>
    <style name="jej_tv_style4">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="home_item1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18dp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="home_item2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="tomn_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#111</item>
        <item name="background">@drawable/solid_button</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="around_item1">
        <item name="android:layout_margin">20dp</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="toolbarTitleStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="carrotfragment_bold">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#111</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="carrotfragment_txt">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">#111</item>
    </style>

    <style name="carrotfragment_card">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="mwh">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="NoTitleBarDialog" parent="Theme.AppCompat.Light.Dialog">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/carrot</item>
        <item name="colorPrimaryDark">#07000000</item>
        <item name="colorAccent">@color/carrot_softgray</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>



</resources>