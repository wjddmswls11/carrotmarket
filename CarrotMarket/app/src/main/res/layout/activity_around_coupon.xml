<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="20dp"
    app:cardUseCompatPadding="true"
    android:padding="20dp"
    android:backgroundTint="@color/white"
    >
    <LinearLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/around_coupon_intent"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textColor="#111"
            android:textStyle="bold"
            android:text="가게이름"/>
        <TextView
            android:layout_margin="10dp"
            android:textSize="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#111"
            android:layout_weight="1"
            android:text="단골이 되면 쿠폰을 받을수 있어요.단골을 맺고 쿠폰을 받으시겠어요?"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/carrot_button_round_fill"
        android:layout_margin="10dp"
        android:id="@+id/popup_coupon"
        >
        <TextView
            android:gravity="center"
            android:padding="10dp"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="단골 맺고 쿠폰 받기"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/carrot_button_round"
            android:layout_margin="10dp"
            android:id="@+id/around_coupon_dismiss"
            >
            <TextView

                android:gravity="center"
                android:textColor="@color/carrot"
                android:padding="10dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="취소"/>
        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>